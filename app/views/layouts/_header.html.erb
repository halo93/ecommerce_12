<ul id="dropdown1" class="dropdown-content locale">
  <li class="dropdown-li center <%= active_class_locale :en %>">
    <%= link_to locale: :en do %>
      <span class = "flag-icon flag-icon-us wide"></span>
      <%= t "eng" %>
    <% end %>
  </li>
  <li class="dropdown-li center <%= active_class_locale :vn %>">
    <%= link_to locale: :vn do %>
      <span class = "flag-icon flag-icon-vn wide"></span>
      <%= t "viet" %>
    <% end %>
  </li>
  <li class="dropdown-li center <%= active_class_locale :jp %>">
    <%= link_to locale: :jp do %>
      <span class = "flag-icon flag-icon-jp wide"></span>
      <%= t "jap" %>
    <% end %>
  </li>
</ul>
<nav>
  <div class="nav-wrapper">
    <%= link_to image_tag("petgiftbox-logo-1.png", id: "logo",
      class: "responsive-img hide-on-med-and-down"),
      root_path, class: "brand-logo" %>
    <ul class="right hide-on-med-and-down">
      <li class="tab-nav <%= active_class root_url %>">
        <a href="<%= root_url %>"><%= t "pages.home.title" %></a>
      </li>
      <li class="tab-nav <%= active_class "/#{I18n.locale}/pages/help" %>">
        <a href="<%= "/#{I18n.locale}/pages/help" %>">
          <%= t "pages.help.title" %>
        </a>
      </li>
      <li class="tab-nav <%= active_class "/#{I18n.locale}/pages/about" %>">
        <a href="<%= "/#{I18n.locale}/pages/about" %>">
          <%= t "pages.about.title" %>
        </a>
      </li>
      <% if user_signed_in? %>
        <li>
          <a class="dropdown-button" data-activates="dropdown"
            data-beloworigin="true">
            <%= current_user.email %>
          </a>
        </li>
        <ul id="dropdown" class="dropdown-content collection">
          <li class="collection-item avatar">
            <%= image_tag(current_user.avatar, class: "circle") if current_user.avatar.present? %>
            <%= link_to (t"profile"), edit_user_registration_path %>
            <div class="divider"></div>
            <%= link_to (t "suggest"), suggests_path %>
            <div class="divider"></div>
            <%= link_to (t "signout"), destroy_user_session_path, method: :delete %>
          </li>
        </ul>
        <li>
          <span>

          </span>
        </li>
      <% end %>
      <li class="tab-nav">
        <a class="dropdown-button" data-activates="dropdown1">
          <i class="material-icons right">language</i>
        </a>
      </li>
    </ul>
  </div>
</nav>
