<div class="col s12 m12">
  <div class="card blue-grey darken-1">
    <div class="card-content white-text">
      <span class="card-title">
        <%= suggest.title %>
      </span>
      <span class="right white-text badge red">
        <%= Suggest.human_enum_name :status, suggest.status %>
      </span>
      <p><%= suggest.content %></p>
    </div>
    <div class="card-action center">
      <a href="#"><i class="material-icons">alarm</i>
        <%= time_ago_in_words suggest.created_at %>
      </a>
    </div>
  </div>
</div>
